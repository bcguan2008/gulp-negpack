{{if (isCentralized == "true" || isLimitedGroup == "true")}}
<div class="m-detail-activity">
    <div class="d-content">
        <div class="obj-info">
            <p class="countdown" id="d-activity-timer"><span class="countdown-txt">剩余时间</span><em class="day"></em>天<em class="hour"></em>:<em class="minute"></em>:<em class="second"></em></p>
            {{if (isCentralized == "true")}}
            <p class="desc">企业集采，小单也享大优惠！</p>
            {{else if (isLimitedGroup == "true")}}
            <p class="desc">库存很有限，老板快伙拼！</p>
            {{/if}}
        </div>
        <div class="obj-piechart">
            <ul>
                <li class='lb'></li>
                <li class='rb'></li>
                <li class='lt'></li>
                <li class='rt'></li>
            </ul>
            <div class="soldout-container" id="d-activity-timer">
                <p><span class="text">已售</span><span class="value">{{tenThousandSep(saledCount, false)}}</span><span class="unit">{{unit}}</span></p>
            </div>
        </div>
    </div>
</div>
{{/if}}