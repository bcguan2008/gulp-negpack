<div class="m-detail-purchasing-list">
    <div class="d-header">
        <dl>
            {{if (imageList && imageList.length>0)}}
            <dt>
                <img src="{{getSize80x80URL(imageList[0].originalImageURI)}}" alt="{{subject}}" />
            </dt>
            {{else}}
            <dt class="no-pic">
                <img src="{{wing.path}}/modules/gallery/imgs/nopic.png" alt="暂无图片" />
            </dt>
            {{/if}}
            <dd class="title">{{subject}}</dd>
            <dd class="price">
                <p class="price-unit">
                    <span class="fd-cny">&yen;</span>
                    <span class="d-pnum">{{getPriceMin()}}</span>
                </p>
                {{if (getPriceMin() != getPriceMax())}}
                <span class="d-pnum-split">-</span>
                <p class="price-unit">
                    <span class="fd-cny">&yen;</span>
                    <span class="d-pnum">{{getPriceMax()}}</span>
                </p>
                {{/if}}
            </dd>
            {{if (isSKUOffer == "true")}}
            <dd class="sku">请选择{{getSkuProp()}}</dd>
            {{/if}}
        </dl>
    </div>
    <div class="d-content">
        {{if (isSKUOffer == "true")}}
        <div id="obj-sku-selector" class="obj-sku-selector">
            <dl class="unit-d-sku-selector">
                {{each skuProps as skuProp}}
                <dt class="spec-title">{{skuProp.prop}}：</dt>
                <dd class="spec">
                    <div class="spec-inner">
                        {{each skuProp.value as value}}
                        <div data-unit-config='{"name":"{{value.name}}"}' class="unit-d-spec-operator">
                            <a href="#" title="{{=value.name}}" class="fui-btn">{{=value.name}}</a>  
                        </div>
                        {{/each}}
                    </div>
                </dd>
                {{/each}}
            </dl>
        </div>
        {{/if}}
        <div class="obj-order">
            <div class="obj-header">
                <span class="obj-title">购买数量：</span>
            </div>
            <div class="obj-content">
                <div class="unit-d-amount-control">
                    <a href="#" class="amount-down">-</a>
                    <input type="text" onfocus="this.type='number'" onblur="this.type='text'" maxlength="10" class="amount-input" value="0">
                    <a href="#" class="amount-up">+</a>
                </div>
                <div class="stock">库存<span class="value">{{canBookedAmount}}</span><span class="unit">{{unit}}</span></div>
                {{if (sellunit && scale)}}
                <div class="wholesale-rule">本商品按<span class="wr-unit">{{sellunit}}</span>批发，1<span class="wr-unit">{{sellunit}}</span>=<span class="value">{{scale}}</span><span class="unit">{{unit}}</span></div>
                {{/if}}
            </div>
        </div>
        <div class="obj-purchasing-list">
            <div class="obj-header box-shadow">
                <p class="amount">采购清单：共<span class="value">0</span><span class="unit">{{unit}}</span></p>
                <p class="price"><span class="fd-cny">&yen;</span><span class="value">0.00</span><a class="d-showup visibility-hide" href="#">展开</a></p>
            </div>
            <div class="obj-content fd-hide">
            </div>
        </div>
    </div>
</div>
