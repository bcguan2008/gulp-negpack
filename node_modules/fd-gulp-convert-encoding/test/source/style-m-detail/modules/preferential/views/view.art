{{if (promotionDetails && promotionDetails.length > 0)}}
<div class="m-detail-preferential">
    <div class="d-header"><span class="d-title">优惠说明</span></div>
    <div class="d-content">
        <a class="d-showup" href="#">展开</a>
        <div class="d-dialog d-dialog-preferential fd-hide">
            <div class="d-dialog-title">
                <h3>优惠说明</h3>
                <a href="#" class="d-close" title="关闭">关闭</a>
            </div>
            <div class="d-dialog-content">
                <dl>
                    {{each promotionDetails as promotion}}
                    <dt>{{=promotion.detailPromotionTemplates[0]}}</dt>
                    <dd>{{promotion.startTime}} - {{promotion.endTime}}</dd>
                    {{/each}}
                </dl>
            </div>
        </div>
    </div>
</div>
{{/if}}