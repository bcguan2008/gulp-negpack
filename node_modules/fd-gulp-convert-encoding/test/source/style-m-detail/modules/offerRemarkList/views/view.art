<div class="m-detail-offer-remark-list" id="m-detail-offer-remark-list">
	<div class="remark-content">
		{{if (model && model.length != 0)}}
		<div class="remark-list">
        {{each model as remark}}
		<div class="remark-item">
			<div class="hd">
				<span class="member">{{remark.raterUserNick}}<i class="member-star star3"></i></span>
				<span class="amount">{{remark.offerPrice.amount}}{{remark.unit}}</span>
			</div>
			<div class="bd">
				{{remark.content}}
			</div>
			<div class="date">
				<span>{{remark.gmtPublished}}</span> {{remark.identityAttr}}
			</div>
			{{if (remark.explanation)}}
 			<div class="explain">
				<span class="arrow"></span>
				<div class="bd">
					[买家解释] : {{remark.explanation}}
				</div>
				<div class="date">
					<span>2013年12月1日</span>
				</div>
			</div>
			{{/if}}
		</div>
        {{/each}}
        </div>
		<div id="pullUp">
			<i class="icon-pullUp"></i><span class="pullUpLabel">向上拖动加载</span>
		</div>
		{{else}}
		<div class="no-remark">
    		<div class="bd">
    			<i class="icon-noremark"></i>
    			还没有相关评价
    		</div>
    	</div>
		{{/if}}
	</div>
</div>